<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Notice-Mapper">

	<sql id="userChoice">
		<if test="userChoice == 'b'.toString()">

		</if>
		<if test="userChoice == 'p'.toString()">
			and pop_yn = 'Y'
		</if>
		<if test="userChoice == 'f'.toString()">
			and pick_yn = 'Y'
		</if>
	</sql>
	<sql id="uc">
		<if test="userChoice == 'b'.toString()">

		</if>
		<if test="userChoice == 'p'.toString()">
			where pop_yn = 'Y'
		</if>
		<if test="userChoice == 'f'.toString()">
			where pick_yn = 'Y'
		</if>
	</sql>
	<select id="selectNoticeForPage" resultType="noticeVO">
		select
		    n_no
		  , admin_id
		  , n_title
		  , n_content
		  , n_date
		  , del_yn
		  , pick_yn
		  , pop_yn
		  , pop_period_start
		  , pop_period_end
		from
    	  notice
    	where del_yn = 'N'
    	<include refid="userChoice"></include>
		order by n_date desc
	</select>

	<select id="countNoticeForPage" resultType="int">
		select count(*) from notice <include refid="uc"></include>
	</select>

	<select id="detailNotice" resultType="noticeVO">
		select
		    n_no
		  , admin_id
		  , n_title
		  , n_content
		  , n_date
		  , del_yn
		  , pick_yn
		  , pop_yn
		  , pop_period_start
		  , pop_period_end
		from
    	  notice
    	where del_yn = 'N'
    	  and n_no = #{nNo}
	</select>

	<update id="insertNotice" parameterType="noticeVO">
		insert into notice(n_no, admin_id, n_title, n_content, n_date, del_yn, pick_yn, pop_yn, pop_period_start, pop_period_end)
		values(#{nNo}, #{adminId}, #{nTitle}, #{nContent}, sysdate, 'N', #{pickYn}, #{popYn}, #{popPeriodStart}, #{popPeriodEnd})
	</update>

	<select id="noticeSeq" resultType="int">
		select notice_seq.nextVal from dual
	</select>

</mapper>