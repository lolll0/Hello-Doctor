<select id="selectCase" resultType="caseVO">
		select
		a.dis_no,
		a.d_id,
		a.dis_title,
		a.dis_content,
		to_char(a.dis_date, 'YYYY-MM-DD HH:MI:SS')as dis_date,
		a.dis_cnt,
		a.del_yn,
		a.dis_d_name,
		a.dis_sex,
		a.dis_class,
		c.ma_name,
		(select count(d.d_id) from dis_recom d where d.dis_no = a.dis_no) as recom
		from
		case_dis a, doctor b, major c
		where a.d_id = b.d_id
		and b.ma_no = c.ma_no

		order by dis_date
</select>

<select id="NoticeBoard" resultType="HistoryVO">
SELECT
    a.n_no
   ,a.n_title
   ,a.admin_id
   ,TO_CHAR(a.n_date,'YYYY-MM-DD') AS n_date
   ,b.notice_yn
   ,c.d_id
FROM
    notice a
   ,noti_confirm b
   ,doctor c
WHERE
    a.n_no = b.n_no
    AND   b.d_id = c.d_id
    AND   b.d_id = #{d_id}
ORDER BY
    n_date DESC



</select>


</mapper>