<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="History-Mapper">

<!-- 진료히스토리 -->
<select id="diagnosisList" resultType="HistoryVO"  parameterType="string">

    SELECT
	b.m_no
   ,a.p_name
   ,substr(a.p_rnum,1,8) as p_rnum
   ,b.d_name
   ,d.sub_d_name
   ,TO_CHAR(b.m_date,'yyyy-mm-dd hh24:mi') AS m_date
FROM
    patient a
   ,medi_reco b
   ,doctor c
   ,sub_d D
WHERE
    b.d_id = c.d_id
    AND   b.p_no = a.p_no
    AND   D.M_NO = b.M_NO
    AND   b.d_id=#{d_id}
ORDER BY
    m_date desc

</select>

<!-- 협진히스토리 -->
<select id="CooperationList" resultType="HistoryVO"  parameterType="string">
SELECT
    distinct(a.com_no)as com_no
   ,a.co_no
   ,b.co_doc
   ,TO_CHAR(a.com_date,'yyyy-mm-dd hh24:mi') AS com_date
   ,a.com_status
   ,b.co_disease
   ,c.p_name
   ,substr(c.p_rnum,1,8) as p_rnum

FROM
    com_reco a
   ,co_med b
   ,patient c
   ,doctor d


WHERE
    a.co_no = b.co_no

    AND   b.p_no = c.p_no
    AND   d.d_id = b.co_doc
    AND   d.d_id=#{d_id}
ORDER BY
    com_date DESC
</select>

<!-- 진료히스토리 자세히보기 -->
<select id="selectDiagnosisHistory" resultType="HistoryVO">
	SELECT
	    a.m_no
	   ,d.p_name
	   ,d.p_sex
	   ,substr(d.p_rnum,1,8) as p_rnum
	   ,a.d_name
	   ,b.sub_d_name
	   ,c.d_name
	   ,a.symptom
	   ,TO_CHAR(a.m_date,'yyyy-mm-dd hh24:mi') AS m_date
	FROM
	    medi_reco a
	   ,sub_d b
	   ,doctor c
	   ,patient d
	WHERE
	    c.d_id = a.d_id
	    AND   a.p_no = d.p_no
	    AND   a.m_no = b.m_no
	    AND a.m_no =#{m_no}
</select>

<!-- 협진히스토리 자세히보기 -->
<select id="selectCooperationHistory" resultType="HistoryVO">
SELECT
    a.p_name
   ,a.p_sex
   ,a.p_rnum
   ,b.co_disease
   ,c.sub_d_name
   ,b.co_doc
   ,e.d_name
   ,d.ma_name
   ,TO_CHAR(b.co_start_date,'yyyy-mm-dd hh24:mi') AS co_start_date
FROM
    patient a
   ,co_med b
   ,co_sub_d c
   ,major d
   ,doctor e
WHERE
    a.p_no = b.p_no
    AND   e.d_id = b.co_doc
    AND   d.ma_no = e.ma_no
    AND   b.co_no = c.co_no
    AND   b.com_no = #{com_no}
</select>

<select id="alarmListFirst" resultType="HistoryVO">
SELECT DISTINCT
    ( a.noti_no ) AS noti_no
   ,a.resd_id
   ,a.reqd_id
   ,b.d_id
   ,b.d_name
   ,c.ma_name
   ,a.read
   ,TO_CHAR(a.noti_date,'YYYY-MM-DD') AS noti_date
FROM
    noti a
   ,doctor b
   ,major c
   ,co_med d
WHERE
    c.ma_no = b.ma_no
    AND   b.d_id = a.reqd_id
    AND   d.co_doc = a.reqd_id
    AND   a.co_no = d.co_no
    AND   a.resd_id = #{dId}
</select>

<!--  받은요청에 대한 기록 -->
<select id="sending" resultType="HistoryVO">
SELECT
    a.noti_no
   ,a.resd_id
   ,a.reqd_id
   ,a.response
   ,a.read
   ,TO_CHAR(a.noti_date,'YYYY-MM-DD') AS noti_date
   ,b.d_name
   ,c.ma_name
FROM
    noti a
   ,doctor b
   ,major c
WHERE
    c.ma_no = b.ma_no
    AND   a.reqd_id = b.d_id
    AND   a.resd_id = #{dId}
    order by noti_date desc
</select>

<select id="NoticeList" resultType="HistoryVO">
SELECT DISTINCT
    ( a.n_no ) AS n_no
   ,a.n_title
   ,TO_CHAR(a.n_date,'YYYY-MM-DD') AS n_date
   ,b.notice_yn
   ,c.d_id
FROM
    notice a
   ,noti_confirm b
   ,doctor c
WHERE
    a.n_no = b.n_no
    AND   b.d_id = c.d_id
    AND   b.d_id=#{d_id}
ORDER BY
    n_date DESC

</select>

<update id="updateNotice" parameterType="HistoryVO">
UPDATE noti_confirm
    SET
        notice_yn = '0'
WHERE
    notice_yn = '1'
    AND   d_id = #{d_id}
    AND   n_no = #{n_no}
</update>

<select id="LikeCaseList" resultType="HistoryVO">
SELECT
    *
FROM
    (
        SELECT
            b.dis_no
           ,a.d_name
           ,b.dis_title
           ,TO_CHAR(c.r_date,'yyyy-mm-dd hh24:mi') AS r_date
        FROM
            doctor a
           ,case_dis b
           ,dis_recom c
        WHERE
            a.d_id = c.d_id
            AND   b.dis_no = c.dis_no
            AND   a.d_id = #{d_id}
        UNION
        SELECT
            d.dis_rply_no
           ,a.d_name
           ,b.dis_title
           ,TO_CHAR(d.r_date,'yyyy-mm-dd hh24:mi') AS d_date
        FROM
            doctor a
           ,case_dis b
           ,dis_reply c
           ,reply_recom d
        WHERE
            d.d_id = a.d_id
            AND   c.dis_rply_no = d.dis_rply_no
            AND   c.dis_no = b.dis_no
            AND   a.d_id = #{d_id}

    )
	ORDER BY
	    r_date DESC

</select>
<select id="Likeorderset" resultType="HistoryVO">
 	SELECT
            a.o_no
           ,b.d_name
           ,a.o_title
           ,TO_CHAR(c.r_date,'yyyy-mm-dd hh24:mi') AS r_date
        FROM
            drug_orderset a
           ,doctor b
           ,drug_recom c
        WHERE
            a.o_no = c.o_no
            AND   b.d_id = c.d_id
            AND   b.d_id = #{d_id}
            ORDER BY
    r_date DESC

</select>

