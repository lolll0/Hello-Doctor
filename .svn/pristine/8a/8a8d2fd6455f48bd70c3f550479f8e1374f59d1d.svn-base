<select id = "selectCoFreq" resultType="coFreqVO" parameterType="str">
	select
	a.co_no,a.d_id, TO_CHAR(a.cof_regdate,'YYYY-MM-DD') as cof_regdate ,
	b.p_no,b.co_doc,b.co_disease,c.p_name,c.p_sex,c.p_rnum
