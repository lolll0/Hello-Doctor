FROM
    doctor a
   ,major b
   ,sub_major c
WHERE
    a.d_id = #{dId}
    AND   a.ma_no = b.ma_no
    AND   b.ma_no = c.ma_no

</select>

<!-- 해당의료진이 맡고 있는 진료 -->

<select id="selectTaskList" parameterType="map" resultType="coTaskASubVO">
SELECT
   d_id
   ,co_no
   ,ta_no
